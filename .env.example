# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/trustedpython_dev

# JWT Configuration
SECRET_KEY=your-super-secret-key-here-make-it-long-and-random-which-is-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_NAME=TrustedPython Backend
DEBUG=True
LOG_LEVEL=info
PORT=8000

# CORS Configuration (comma-separated list of allowed origins)
# For production, specify exact origins like: http://flutter-app.com,https://flutter-app.com
# For development, * allows all origins
ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60